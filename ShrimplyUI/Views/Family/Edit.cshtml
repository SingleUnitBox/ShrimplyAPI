@using ShrimplyUI.Models.Dto;
@model FamilyDto

<h1 class="mt-3">Edit Family</h1>

@if (Model != null)
{
    <form method="post">
        <div>
            <label class="form-label">Id</label>
            <input type="text" asp-for="Id" class="form-control" readonly />
        </div>
        <div>
            <label class="form-label">Name</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div>
            <label class="form-label">Code</label>
            <input type="text" asp-for="Code" class="form-control" />
        </div>
        <div>
            <label class="form-label">Image Url</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Edit</button>
            <button type="submit" class="btn btn-outline-danger" asp-action="Delete">Delete</button>
            <a class="btn btn-danger" asp-action="Index">Back</a>
        </div>
    </form>
}
